---
const {id, name, description, ingredient, image } = Astro.props
import pizzaImg from '../../public/pizza.png'

---
<div class="items-center bg-gray-50 rounded-lg shadow sm:flex dark:bg-gray-800 dark:border-gray-700">
    <a href={`/recetas/${id}`}>
        <img class="w-full rounded-lg sm:rounded-none sm:rounded-l-lg" src={image} alt="comida">
    </a>
    <div class="p-5">
        <h3 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
            <a href="#">{name}</a>
        </h3>
        <span class="text-gray-500 dark:text-gray-400">{description}</span>
        <p class="mt-3 mb-4 font-light text-gray-500 dark:text-gray-400">{ingredient}</p>
    </div>
</div>